#include<iostream>
using namespace std;
int main(){
    
    int i;
    cout<<"enter 1 if you want to divide'/'"<<endl;
    cout<<"enter 2 if you want to multiply'*'"<<endl;
    cout<<"enter 3 if you want to add'+'"<<endl;
    cout<<"enter 4 if you want to subs'-'"<<endl;
    cin>>i;
    long double a,b,c;
    cout<<"enter numbers here : ";
    cin>>a>>b;
   
    switch (i)
    {
        case 1:
            cout<<"here is the result : "<<a/b;
            break;
            case 2:
             cout<<"here is the result : "<<a*b;
             break;
             case 3:
              cout<<"here is the result : "<<a+b;
              break;
              case 4:
              cout<<"here is the result : "<<a-b;
              break;
              default:
              cout<<"invailid input";
              break;
              
    }
return 0;
}
